<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:left_padding="$float:activity_horizontal_margin">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:padding="16vp">

        <Text
            ohos:id="$+id:text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:padding="8vp"
            ohos:text="$string:scroll"
            ohos:text_color="#737373"
            ohos:text_size="14fp"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:multiple_lines="true"
            ohos:padding="8vp"
            ohos:text="$string:lorem_ipsum"
            ohos:text_color="#737373"
            ohos:text_size="14fp"/>

        <ListContainer
            ohos:id="$+id:default_listContainer"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:padding="8vp">
        </ListContainer>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:italic="true"
            ohos:multiple_lines="true"
            ohos:padding="8vp"
            ohos:text="$string:whoops"
            ohos:text_color="#737373"
            ohos:text_size="14fp"/>
    </DirectionalLayout>
</ScrollView>
