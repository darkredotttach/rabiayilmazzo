<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    >

    <DirectionalLayout
        ohos:height="60vp"
        ohos:width="match_parent">

        <Text
            ohos:id="$+id:title"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:background_element="#1F1F1F"
            ohos:layout_alignment="vertical_center"
            ohos:left_padding="10vp"
            ohos:orientation="vertical"
            ohos:right_padding="10vp"
            ohos:text_color="#ffffff"
            ohos:text_size="18fp"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:bottom_padding="$float:activity_vertical_margin"
        ohos:left_padding="$float:activity_horizontal_margin"
        ohos:orientation="vertical"
        ohos:right_padding="$float:activity_horizontal_margin"
        ohos:top_padding="$float:activity_vertical_margin">

        <Button
            ohos:id="$+id:bt_default"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="#D9D9D9"
            ohos:bottom_padding="5vp"
            ohos:layout_alignment="horizontal_center"
            ohos:left_padding="8vp"
            ohos:margin="18vp"
            ohos:right_padding="8vp"
            ohos:text="TRY DEFAULT LISTVIEW"
            ohos:text_size="14fp"
            ohos:top_padding="5vp"/>

        <Button
            ohos:id="$+id:bt_expandable"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="#D9D9D9"
            ohos:bottom_padding="5vp"
            ohos:layout_alignment="horizontal_center"
            ohos:left_padding="8vp"
            ohos:margin="18vp"
            ohos:right_padding="8vp"
            ohos:text="TRY EXPANDABLE LISTVIEW"
            ohos:text_size="14fp"
            ohos:top_padding="5vp"/>

        <Button
            ohos:id="$+id:bt_expandable_gridview"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="#D9D9D9"
            ohos:bottom_padding="5vp"
            ohos:layout_alignment="horizontal_center"
            ohos:left_padding="8vp"
            ohos:margin="18vp"
            ohos:right_padding="8vp"
            ohos:text="TRY EXPANDABLE GRIDVIEW"
            ohos:text_size="14fp"
            ohos:top_padding="5vp"
            ohos:visibility="hide"/>
    </DirectionalLayout>
</DirectionalLayout>
